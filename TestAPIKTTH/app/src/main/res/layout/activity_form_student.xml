        app:layout_constraintEnd_toEndOf="@+id/form_point"
        app:layout_constraintHorizontal_bias="0.534"
        app:layout_constraintStart_toStartOf="@+id/form_point"
        app:layout_constraintTop_toBottomOf="@+id/form_point" />
</androidx.constraintlayout.widget.ConstraintLayout>